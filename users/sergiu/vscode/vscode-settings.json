{
  "nix.enableLanguageServer": true,
  "nix.serverPath": "/etc/profiles/per-user/ser${user}giu/bin/nixd",
  "nix.formatterPath": "/etc/profiles/per-user/${user}/bin/nixfmt-rfc-style",
  "editor.defaultFormatter": "jnoortheen.nix-ide",
  "editor.formatOnSave": true,
  "[nix]": {
    "editor.defaultFormatter": "jnoortheen.nix-ide",
    "editor.formatOnSave": true
  },
  "nix.serverSettings": {
    "nixd": {
      "formatting": {
        "command": [ "nixfmt" ]
      }
    }
  },
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "update.mode": "none"
}